{
	"name": "install-dprint",
	"version": "2.0.0",
	"private": true,
	"description": "GitHub Action to install the dprint code formatter with caching",
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": ">=24 <25"
	},
	"packageManager": "bun@1.3.9",
	"scripts": {
		"build": "ncc build src/main.ts -o dist && ncc build src/post.ts -o dist/post",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@actions/cache": "^6.0.0",
		"@actions/core": "^3.0.0",
		"@actions/exec": "^3.0.0",
		"@actions/glob": "^0.6.1",
		"@actions/http-client": "^4.0.0",
		"@actions/io": "^3.0.2",
		"@actions/tool-cache": "^4.0.0"
	},
	"devDependencies": {
		"@types/node": "^25.2.3",
		"@vercel/ncc": "^0.38.4",
		"typescript": "^5.9.3"
	}
}
